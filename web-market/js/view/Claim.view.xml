<mvc:View
   xmlns="sap.m"
   xmlns:mvc="sap.ui.core.mvc"
   xmlns:l="sap.ui.layout"
   xmlns:core="sap.ui.core"
   controllerName="de.javue.csgogo.controller.Claim">   
    <Page title="{i18n>CLAIM_TITLE}">
        <l:VerticalLayout id="matchLinkContainer" class="sapUiContentPadding" width="100%">
            <Label text="{i18n>CLAIM_MATCH_LINK}"/>
            <core:Fragment fragmentName="de.javue.csgogo.fragment.MatchLink" type="XML"/>
        </l:VerticalLayout> 
        <footer>
            <Toolbar>
                <ToolbarSpacer />
                <Button type="Accept" text="{i18n>CLAIM_BTN_CLAIM}"/>
            </Toolbar>
       </footer> 
    </Page>
</mvc:View>